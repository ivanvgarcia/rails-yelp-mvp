<h1><%= @restaurant.name %></h1>

<div class="container">
  <div class="btn-group" role="group" aria-label="Basic example">
    <%= link_to 'home', restaurants_path, class: "btn btn-primary" %> <%=
    link_to 'edit', edit_restaurant_path(@restaurant), class: "btn btn-success"
    %> <%= link_to 'delete', restaurant_path(@restaurant), method: "delete",
    class: "btn btn-danger" %>
  </div>

  <div class="row">
    <h3><%= @restaurant.category %></h3>
    <p><%= @restaurant.phone_number %></p>
    <p><%= @restaurant.address %></p>
  </div>

  <%= link_to 'Add review', new_restaurant_review_path(@restaurant) %>
  <div class="row">
    <% @restaurant.reviews.each do |review| %>
        <%= review.content %>
        <%= review.rating %>
    <% end %>
  </div>
</div>
