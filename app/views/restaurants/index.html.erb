<h1 class="title">
  Restaurants
</h1>

<%= button_to 'Add New', new_restaurant_path, method: "get", class: "btn" %>

<div class="container">
  <div class="row">
    <% @restaurants.each do |restaurant| %>
    <div class="col-xs-12 col-md-4">
      <div class="card">
        <div class="card-header">
          <%= restaurant.name %>
        </div>
        <div class="card-body">
          <h4 class="card-title">
            <%= restaurant.phone_number %>
          </h4>
          <p class="card-text">
            <%= restaurant.address %>
          </p>
          <%= link_to 'See More', restaurant_path(restaurant), class: "btn
          btn-primary" %>
        </div>
        <div class="card-footer text-muted">
          <%= restaurant.category %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
